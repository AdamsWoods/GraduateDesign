<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".history.HistoryActivity"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/historyTab"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:tl_indicator_color="@color/smssdk_tv_light_gray"
        app:tl_indicator_corner_radius="@dimen/tab_indicator"
        app:tl_tab_width="100dp"
        app:tl_textsize="14sp"
        android:layout_gravity="center">

    </com.flyco.tablayout.SegmentTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/historyVP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v4.view.ViewPager>

    <FrameLayout
        android:id="@+id/history_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>