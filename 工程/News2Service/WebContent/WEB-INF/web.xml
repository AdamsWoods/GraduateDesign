<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>News2Service</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>DBManager</servlet-name>
    <servlet-class>com.news.db.DBManager</servlet-class>
    <init-param>
      <param-name>DBUsername</param-name>
      <param-value>root</param-value>
    </init-param>
    <init-param>
      <param-name>DBPassword</param-name>
      <param-value></param-value>
    </init-param>
    <init-param>
      <param-name>ConnectionURL</param-name>
      <param-value>jdbc:mysql://localhost:3306/news2db?characterEncoding=utf8</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>DispatcherServlet</servlet-name>
    <servlet-class>com.news.servlet.DispacherServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DispatcherServlet</servlet-name>
    <url-pattern>/servlet/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.news.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/servlet/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.news.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/servlet/RegisterServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LoginDataServlet</servlet-name>
    <servlet-class>com.news.servlet.LoginDataServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginDataServlet</servlet-name>
    <url-pattern>/servlet/LoginDataServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>HistoryAddServlet</servlet-name>
    <servlet-class>com.news.servlet.HistoryAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HistoryAddServlet</servlet-name>
    <url-pattern>/servlet/HistoryAddServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>HistoryQueryServlet</servlet-name>
    <servlet-class>com.news.servlet.HistoryQueryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HistoryQueryServlet</servlet-name>
    <url-pattern>/servlet/HistoryQueryServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>NewsPaperServlet</servlet-name>
    <servlet-class>com.news.servlet.NewsPaperServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewsPaperServlet</servlet-name>
    <url-pattern>/servlet/NewsPaperServlet</url-pattern>
  </servlet-mapping>
  
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>